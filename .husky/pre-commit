#!/bin/sh
# Pre-commit hook - implements US1 (Pre-commit hooks guard quality gates)
# Set SKIP_PRECOMMIT=1 to bypass this hook (documented opt-out)

if [ "$SKIP_PRECOMMIT" = "1" ]; then
  echo "âš ï¸  Skipping pre-commit checks (SKIP_PRECOMMIT=1)"
  exit 0
fi

echo "ğŸ” Running pre-commit checks..."
echo ""

# Run prettier format check
echo "ğŸ“ Checking formatting..."
yarn format:check || {
  echo "âŒ Formatting check failed. Run 'yarn format' to fix."
  exit 1
}

# Run ESLint
echo "ğŸ” Linting code..."
yarn lint || {
  echo "âŒ Linting failed. Fix the issues above."
  exit 1
}

# Run TypeScript type check
echo "ğŸ“˜ Type checking..."
yarn typecheck || {
  echo "âŒ Type check failed. Fix the type errors above."
  exit 1
}

# Run tests
echo "ğŸ§ª Running tests..."
yarn test:ci || {
  echo "âŒ Tests failed. Fix the failing tests."
  exit 1
}

echo ""
echo "âœ… All pre-commit checks passed!"
